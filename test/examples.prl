].

Thm LowLevel : [
  (->
    (-> wbool wbool)
    wbool)
] by [
  fresh f -> refine fun/intro;
  [fresh x, x/eq -> elim f;
  [`tt, use x],
  refine fun/eqtype;
  refine wbool/eqtype]
].

Extract LowLevel.

Thm LowLevel2 : [
  (->
    (-> wbool wbool)
    wbool)
] by [
  fresh f -> repeat {refine fun/intro; [id, auto]};
  fresh x, x/eq -> elim f;
  [`tt, use x]
].

Extract LowLevel2.

