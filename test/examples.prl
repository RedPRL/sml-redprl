Def Cmp(#f, #g) = [
  (lam [x] ($ #f ($ #g x)))
].


Def MyLoop{x:dim}(#m) = [
  (tuple [proj1 #m] [proj2 (loop x)])
].

Def Test = [
  ({MyLoop 0} (loop 1))
].

Print Test.

Thm SNot : [(-> bool bool)] by [
  lam b. if b then `ff else `tt
].

Thm StrictBoolTest : [ SNot = (Cmp SNot (Cmp SNot SNot)) in (-> bool bool) ] by [
  auto
].

Thm Not : [(-> [_ : wbool] wbool)] by [
  (lam x. if x then `ff else `tt); auto
].

Thm FunExt(#l:lvl) : [
  (->
   [a b : (U #l)]
   [f g : (-> a b)]
   [p : (-> [y : a] (path {_} b ($ f y) ($ g y)))]
   (path {_} (-> a b) f g))
] by [
  lam a, b, f, g, p.
    <i> lam x. use p [use x, @i]
].

Print FunExt.

Tac FunExtTac(#l : lvl) = [
  query gl <- goal.
  match [gl:jdg] {
    [a, b, f, g, k| #jdg{(path {_} (-> %a %b) %f %g) true with %[k:kind]} =>
      use (FunExt #l) [`%a, `%b, `%f, `%g, id]
    ]
  }
].

Print FunExtTac.

Thm NotNotPath : [(path {_} (-> wbool wbool) (Cmp Not Not) (lam [x] x))] by [
  (FunExtTac #lvl{0});
  (lam x. if x then <_> `tt else <_> `ff);
  auto
].

Extract NotNotPath.
Print FunExtTac.
Print NotNotPath.

